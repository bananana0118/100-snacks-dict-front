{
  "tailwindCSS.experimental.configFile": "./src/app/globals.css",
  // 만약 CSS 엔트리 파일 경로를 잡아줘야 하면
  "files.associations": {
    "src/index.css": "css"
  },
  "files.eol": "\n",
  // 파일 끝에 빈 줄 하나 넣기 (선택)
  "files.insertFinalNewline": true,

  // 저장할 때 불필요한 공백 자동 제거 (선택)
  "files.trimTrailingWhitespace": true
}
